<div class="row text-center team-show-splash" id="team-show-splash" style="background-image: url(<%= @team.background_image %>); border-bottom: 5px solid <%= @team.color %>;">
  <div class="team-show-splash-filter">
    <div class="team-show-text">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h1><%= @team.name %></h1>
          <h3 class="subtext"><%= @team.headline %></h3>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <br>
  <br>
  <div class="row">
    <div class="col-md-8">
      <h3 class="subtext">
        There are <%= @team.total_tailgates %> tailgates to choose from for <%= @team.name %> games
      </h3>
      <hr/>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <% @events.each do |event| %>
      <% if event.tailgates.length > 0 %>
      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h2 class="panel-title"><%= event.name %></h2>
              <h3 class="panel-title">
                <small>
                  <%= event.date %>,
                  <%= event.time %>,
                  <%= event.city %>,
                  <%= event.state %>
                </small>
              </h3>
            </div>
            <div class="panel-body">
              <% event.tailgates.each do |tailgate| %>
              <%= tailgate_listing_for tailgate do %>
                <div class="col-md-3 tailgate-listing-image" style="background-image: url(<%= tailgate.image_1 %>);">
                  <div class="tailgate-listing-price" style="background-color: <%= @team.color %>">
                    <h5>$<%= tailgate.price %> Per Guest</h5>
                  </div>
                </div>
                <div class="col-md-6">
                  <h4>
                    <strong>
                      <%= link_to tailgate.name, tailgate_url(tailgate.id) %>
                    </strong>
                  </h4>

                  <p>
                    <em>
                      <%= tailgate.size %> spots remaining |
                      Affiliated with <%= tailgate.affiliation %> team
                    </em>
                  </p>

                  <p class="text-justify"><%= tailgate.description %></p>
                </div>
                <div class="col-md-3">
                  <div class="host-details">
                    <dl class="dl-horizontal">
                      <dt>Host Name:</dt>
                      <dd><%= tailgate.user.short_name %></dd>
                      <dt>Experience:</dt>
                      <dd><%= pluralize(tailgate.host_experience, 'tailgate') %></dd>
                      <dt>Rating:</dt>
                      <dd><%= star_rating_for(tailgate) %> out of 5</dd>
                    </dl>
                  </div>
                </div>
              <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
    <div class="col-md-4">
