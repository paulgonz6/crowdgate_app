
<div class="row text-center landing-splash">
  <div class="landing-page-filter">
    <div class="landing-text">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h1>Find a tailgate to join</h1>
          <h3 class="subtext">
            Hassle-free tailgating is finally here. No planning, no preparing, no clean up. All you need to worry about is having fun on gameday.
          </h3>
        </div>
      </div>
      <br>
      <br>
      <div class="row">
        <%= form_for @event do |f| %>
        <div class="col-md-4 col-md-offset-3 landing-search">
          <%= f.text_field :name, class: 'form-control landing-search-fields', placeholder: "Search for your team"  %>
        </div>
        <div class="col-md-2 landing-search">
          <%= f.submit 'Find Tailgates', class: 'btn btn-primary landing-search-fields' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

