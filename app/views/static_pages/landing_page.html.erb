<div class="row text-center landing-splash" data-behavior="splash">
  <div class="landing-page-filter">
    <div class="landing-text">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h1>Find a tailgate to join</h1>
          <h3 class="subtext">
            Get access to some of the best, and most unique, tailgates across the country. Now your only job on game day is to have fun.
          </h3>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <br>
  <div class="row">
    <%= render 'landing_section_1' %>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <br>
      <h3 class="text-center">
        <strong>Learn More</strong>
      </h3>
      <hr/>
      <div class="row">
        <div class="col-md-6">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <h4>Attending Tailgates</h4>
            </div>
            <div class="panel-body text-center">
              <p>
                <%= link_to 'Click here to learn more about booking a tailgate', how_it_works_url %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <h4>Hosting Tailgates</h4>
            </div>
            <div class="panel-body text-center">
              <p>
                <%= link_to 'Click here to become a host', new_host_url %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
