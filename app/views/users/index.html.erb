<div class="container">
  <div class="row">
    <div class="page-header">
      <h3>Index of all Users (Admin View) (<%= @users.count %> users)</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <th>Image</th>
          <th>Name</th>
          <th>Email</th>
          <th>Admin Status</th>
          <th>Host Status</th>
          <th>Description</th>
          <th></th>
          <th></th>
        </thead>
        <% @users.each do |user| %>
          <tr>
            <td><img src="<%= user.image %>" class="img-responsive img-circle" width="50px;"></td>
            <td><%= link_to "#{user.name}", user_url(user.id) %></td>
            <td><%= user.email %></td>
            <td><%= user.admin %></td>
            <td><%= user.host_status %></td>
            <td><%= user.description %></td>
            <td>
              <p class="btn btn-default btn-block">
                <%= link_to "Edit", edit_user_url(user.id) %>
              </p>
            </td>
            <td>
              <p class="btn btn-danger btn-block">
                <%= link_to "Delete", user_url(user.id), :method => "delete", :data => { :confirm => "Are you sure you want to delete this user?"} %>
              </p>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
