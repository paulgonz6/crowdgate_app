<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Purchases</h3>
  </div>
  <div class="panel-body">
    <ol class="">
      <% @user.bookings.each_with_index do |ticket, i| %>
      <li class="">
        $<%= ticket.amount %> for "<%= ticket.tailgate.name %>" <br>
        <em><%= ticket.quantity %> tickets</em>
        | <small><%= link_to "View", tailgate_url(ticket.tailgate_id), :method => "get" %></small>
        | <small><%= link_to "Refund", booking_url(ticket.id), :method => "Delete", :data => { :confirm => "Are you sure you want to cancel this tailgate? You may not be eligible for a refund. Please check our refund policy."} %></small>
        <!-- | <small><%= link_to "Share", booking_url(ticket.id), :method => "Delete" %></small> --> |
        <br>
        <br>
      </li>
      <% end %>
    </ol>
  </div>
</div>
