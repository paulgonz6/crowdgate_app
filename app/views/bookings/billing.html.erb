<div class="container">
  <div class="row">
    <div class="page-header">
      <h4><%= @tailgate.name %></h4>
      <h4><small><%= @tailgate.event.name %>, <%= @tailgate.event.venue %>, <%= @tailgate.event.city %>, <%= @tailgate.event.state %>, <%= @tailgate.event.time %></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Log In</h3>
        </div>
        <div class="panel-body">
          <%= render 'sessions/login' %>
        </div>
      </div>
    </div>
    <form class="form" action="/tailgates/<%= @tailgate.id %>/booking/receipt">
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Check Out and Create Account</h3>
          </div>
          <div class="panel-body">
            <%= render 'bookings/billingaddress' %>
            <%= render 'bookings/creditcard' %>
            <%= render 'users/signup' %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Confirm</h3>
          </div>
          <div class="panel-body text-center">
            <%= render 'bookings/total_amount' %>
            <input type="submit" value="Confirm Payment" class="btn btn-primary btn-block">
            <hr/>
            <p>Charged to <i class="fa fa-cc-amex"></i> ending in 3000</p>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
