<div class="col-md-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Account Details</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">

      </div>
    </div>
  </div>
</div>

<div class="col-md-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Payment Information</h3>
    </div>
    <div class="panel-body">
      <span class="payment-errors"></span>

      <!-- Credit Card Number -->
      <div class="form-group">
        <label>Card Number</label>
        <input class="form-control" type="text" size="20" data-stripe="number"/>
      </div>

      <!-- CVC Number -->
      <div class="form-group">
        <label>CVC</label>
        <input class="form-control" type="text" size="4" data-stripe="cvc"/>
      </div>

      <!-- Expiration Date -->
      <div class="form-group">
        <div class="col-md-6" style="padding-left: 0;">
          <label>Expiration (MM)</label>
          <select class="form-control" data-stripe="exp-month">
            <option value="01">Jan (01)</option>
            <option value="02">Feb (02)</option>
            <option value="03">Mar (03)</option>
            <option value="04">Apr (04)</option>
            <option value="05">May (05)</option>
            <option value="06">June (06)</option>
            <option value="07">July (07)</option>
            <option value="08">Aug (08)</option>
            <option value="09">Sep (09)</option>
            <option value="10">Oct (10)</option>
            <option value="11">Nov (11)</option>
            <option value="12">Dec (12)</option>
          </select>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-6">
          <label>Expiration (YYYY)</label>
          <select class="form-control" data-stripe="exp-year">
            <option value="13">2013</option>
            <option value="14">2014</option>
            <option value="15">2015</option>
            <option value="16">2016</option>
            <option value="17">2017</option>
            <option value="18">2018</option>
            <option value="19">2019</option>
            <option value="20">2020</option>
            <option value="21">2021</option>
            <option value="22">2022</option>
            <option value="23">2023</option>
          </select>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="col-md-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Confirm</h3>
    </div>
    <div class="panel-body text-center">
      <%= render 'bookings/total_amount' %>
      <input type="hidden" name="tailgate_id" value="<%= @tailgate.id %>">
      <button type="submit" class="btn btn-primary btn-block">Submit Payment</button>
    </div>
  </div>
</div>
