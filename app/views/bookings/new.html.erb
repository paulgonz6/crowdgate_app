<div class="container">
  <div class="row row-page-start">
    <div class="col-xs-12">
      <div class="page-header">
        <h3><%= @tailgate.name %></h3>
        <h4>
          <small>
            <%= @tailgate.event.name %>,
            <%= @tailgate.event.venue %>
          </small>
        </h4>
      </div>
    </div>
  </div>
  <% unless @tailgate.class == FreeTailgate %>
    <div class="row">
      <%= form_for( [@tailgate, @booking],
                    :url => tailgate_bookings_url,
                    :html => {:class => "form", :id => "payment-form"},) do |f| %>

        <% if user_signed_in? %>
          <%= render 'checkout_logged_in', { :@booking => @booking, :f => f } %>
        <% else %>
          <%= render 'checkout_new_user', { :@booking => @booking, :f => f } %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="row">
      <%= render 'rsvp_block', { :@booking => @booking } %>
    </div>
  <% end %>
</div>


<% content_for :bottom do %>
  <script type="text/javascript">

  Stripe.setPublishableKey('<%= @stripe_key %>');

  var stripeResponseHandler = function(status, response) {
    var $form = $('#payment-form');

    if (response.error) {
          $form.find('.payment-errors').text(response.error.message);
          $form.find('#buttonStripe').prop('disabled', false);
        } else {
          var token = response.id;
          $form.append($('<input type="hidden" name="stripeToken" />').val(token));
          $form.get(0).submit();
        }
      };

      jQuery(function($) {
        $('#buttonStripe').on('click', (function(e) {
          var $form = $('#payment-form');
          $form.find('#buttonStripe').prop('disabled', true);
          Stripe.card.createToken($form, stripeResponseHandler);
          return false;
        }));

      });
  </script>
<% end %>
