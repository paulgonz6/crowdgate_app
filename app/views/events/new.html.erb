<div class="container">

  <% if @event.errors.full_messages.count > 0 %>
    <div class="alert alert-danger alert-lists" role="alert">
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row row-page-start">
    <div class="page-header">
      <h3>Admin Events Management</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <h4>Add by Team</h4>
      <hr/>

      <%= form_tag events_bulk_create_url, :method => "post", :class => "form-horizontal" do %>
      <div class="form-group">
        <label for="name" class="col-md-2 control-label">School</label>
        <div class="col-md-10">
          <input type="text" class="form-control" name="name" id="name" placeholder="Type in name of college" required>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-primary">Add Schedule</button>
        </div>
      </div>
      <% end %>
    </div>

    <div class="col-md-4 col-md-offset-1">
      <h4>Add new Event</h4>
      <hr/>

      <%= form_tag events_url, :method => "post", :class => "form-horizontal" do %>
      <div class="form-group">
        <label for="name" class="col-md-2 control-label">Name</label>
        <div class="col-md-10">
          <input type="text" class="form-control" name="name" id="name" value="<%= @event.name %>">
        </div>
      </div>

      <div class="form-group">
        <label for="date" class="col-md-2 control-label">Date</label>
        <div class="col-md-10">
          <input type="text" class="form-control" id="date" name="date" value="<%= @event.date %>">
        </div>
      </div>

      <div class="form-group">
        <label for="time" class="col-md-2 control-label">Time</label>
        <div class="col-md-10">
          <input type="text" class="form-control" name="time" id="time" value="<%= @event.time %>">
        </div>
      </div>

      <div class="form-group">
        <label for="venue" class="col-md-2 control-label">Venue</label>
        <div class="col-md-10">
          <input type="text" class="form-control" name="venue" id="venue" value="<%= @event.venue %>">
        </div>
      </div>

      <div class="form-group">
        <label for="city" class="col-md-2 control-label">City</label>
        <div class="col-md-10">
          <input type="text" class="form-control" name="city" id="city" value="<%= @event.city %>">
        </div>
      </div>

      <div class="form-group">
        <label for="name" class="col-md-2 control-label">State</label>
        <div class="col-md-10">
          <input type="text" class="form-control" name="state" id="state" value="<%= @event.state %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-primary btn-lrg">Create Event</button>
        </div>
      </div>
      <% end %>
    </div>
  </div>

</div>


