<div class="container">
  <div class="row">
    <div class="page-header">
      <h3>Index of all events</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <th>ID</th>
          <th>Name</th>
          <th>Event Date</th>
          <th>Event Time</th>
          <th>Venue</th>
          <th>City</th>
          <th>State</th>
          <th></th>
          <th></th>
        </thead>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.id %></td>
            <td><%= event.name %></td>
            <td><%= event.date %></td>
            <td><%= event.time %></td>
            <td><%= event.venue %></td>
            <td><%= event.city %></td>
            <td><%= event.state %></td>
            <td><p class="btn btn-default btn-block"><a href="/events/edit/<%= event.id %>">Edit</a></p></td>
            <td><p class="btn btn-danger btn-block"><a href="/events/delete/<%= event.id %>">Delete</a></p></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
