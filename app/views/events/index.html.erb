<div class="container">
  <div class="row row-page-start">
    <div class="page-header">
      <h3>Index of all events</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <th>ID</th>
          <th>Name</th>
          <th>Venue</th>
          <th>City</th>

          <th>Time</th>
          <th>Home Team</th>
          <th>Away Team</th>
          <th></th>
          <th></th>
        </thead>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.id %></td>
            <td><%= event.name %></td>
            <td><%= event.venue %></td>
            <td><%= event.city %></td>

            <td><%= event.date.in_time_zone('Eastern Time (US & Canada)').strftime('%b %e, %Y %I:%M %p %Z') %></td>
            <td><%= event.home_team.try(:name) %></td>
            <td><%= event.away_team.try(:name) %></td>

            <td>
              <p class="btn btn-default btn-block">
                <%= link_to "Edit", edit_event_url(event.id) %>
              </p>
            </td>
            <td>
              <p class="btn btn-danger btn-block">
                <%= link_to "Delete", event_url(event.id), :method => "delete", :data => { :confirm => "Are you sure you want to delete this event?"} %>
              </p>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
