<div class="container">
  <div class="row row-page-start">
    <div class="col-md-8">
        <h3><%= @tailgate.name %></h3>
        <h4>
          <small>
            <%= @tailgate.event.name %>,
            <%= @tailgate.event.venue %>,
            <%= @tailgate.event.city %>,
            <%= @tailgate.event.state %><br>
            <%= @tailgate.event.date.strftime('%A, %B %e, %Y') %>,
            Game starts at <%= @tailgate.event.date.in_time_zone('Eastern Time (US & Canada)').strftime('%I:%M %p %Z') %>
          </small>
        </h4>
        <hr/>
    </div>
    <%= render 'tailgates/booking_block' %>
  </div>

  <%= render 'tailgates/tailgateinfo' %>
  <%= render 'tailgates/pictures' %>
  <%= render 'tailgates/host_info' %>
  <%= render 'reviews/index' %>
</div>
