
<% @tailgates.each do |listing| %>
  <div class="row tailgate-listing">
    <div class="col-md-4">
      <dl class="dl-horizontal host-details">
        <dt>Host Name:</dt>
        <dd>Sheldon C.</dd>
        <dt>Experience:</dt>
        <dd>Hosted 18 Tailgates</dd>
        <dt>Status:</dt>
        <dd>Veteran</dd>
        <dt>Rating:</dt>
        <dd>4 Stars</dd>
      </dl>
    </div>
    <div class="col-md-6">
      <p><a href="show/<%= listing.id %>"><strong><%= listing.name %></a></strong></p>
      <p>
        <%= listing.description %>
      </p>
    </div>
     <div class="col-md-2">
      <p><%= listing.size %> spots left</p>
      <p>$<%= listing.price %> Per Guest</p>
    </div>
  </div>
<% end %>
