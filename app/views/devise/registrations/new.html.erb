<div class="row form-area">
  <div class="form-content">
    <div class="row col-md-4 col-md-offset-4 row-page-start">
      <h3 class="text-center">Sign Up</h3>
    </div>
    <div class="col-md-4 col-md-offset-4 form-inputs text-center">
      <hr/>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => 'form-horizontal' })  do |f| %>
      <%= devise_error_messages! %>


      <%= f.email_field :email, autofocus: true,
          class: 'form-control form-input-fields text-center',
          placeholder: "Email address" %>

      <br>

      <%= f.text_field :name,
          class: 'form-control form-input-fields text-center',
          placeholder: "First and Last Name" %>

      <br>

      <%= f.text_field :image,
          class: 'form-control form-input-fields text-center',
          placeholder: "Image URL"  %>

      <br>

      <%= f.password_field :password, autocomplete: "off",
          class: 'form-control form-input-fields text-center',
          placeholder: "Password (8 characters minimum)" %>

      <br>

      <%= f.password_field :password_confirmation, autocomplete: "off",
          class: 'form-control form-input-fields text-center',
          placeholder: "Password Confirmation" %>

      <br>
      <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end -%>

      <hr/>

      <%= f.submit 'Sign Up', class: 'btn btn-primary form-input-fields' %>
      <br>
      <br>
      or <%= render "devise/shared/links" %>
      <br>

      <% end %>
    </div>
  </div>
</div>
</div>


