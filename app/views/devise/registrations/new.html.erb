<div class="row form-area">
  <div class="form-content">
    <div class="row col-md-4 col-md-offset-4 row-page-start">
      <h3 class="text-center">Sign Up</h3>
    </div>
    <div class="col-md-4 col-md-offset-4 form-inputs">
      <hr/>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: 'form-control form-input-fields' %>

      <br>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control form-input-fields' %>

      <br>
      <%= f.label :image %>
      <%= f.text_field :image, class: 'form-control form-input-fields'  %>

      <br>
      <%= f.label :password %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control form-input-fields' %>

      <br>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-input-fields' %>

      <br>
      <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end -%>

      <hr/>

      <%= f.submit 'Sign Up', class: 'btn btn-primary form-input-fields' %> or <%= render "devise/shared/links" %>
      <br>

      <% end %>
    </div>
  </div>
</div>
</div>


